//cSpell GLOBAL Settings (not workspace specific)
// Workspace specific settings should go into ${workspace}/.vscode/cSpell.json
{
  "languageSettings": [
    // Comment only spell check in JavaScript, Typescript, JSON/C, Vue
    {
      "languageId": "javascript,typescript,json,jsonc,vue,html",
      "includeRegExpList": [ "CStyleComment", "strings" ]
    }
  ],
  "userWords": [
    "posix", "drwx", "pubkey", "symlink", "symlinks", "dotfiles", "mnemonicprefix",
    "datetime", "blob", "blobstorage", "ACCOUNTNAME", "ACCOUNTKEY",
    "oauth", "authed", "auth'ed", "connstring", "pkgname", "pkgrepo",
    "authtoken", "bday",
    "hacky", "hackjob", "smidge", "upto", "hardcoding", "hardcode", "automagically",
    "shortname", "lastname", "fullname", "hostnames", "stackable", "helloworld",
    "linebreaks", "uniquefield", "hotloads", "onclick", "Favorited", "searchstring",
    "formname", "formtitle", "hashmd5", "keygen",
    "docx", "localsettings", "executablename", "msixbundle",
    "docs", "objs", "devs",
    "fatals", "scrollback",
    "noopener", "noreferrer", "noindex",
    "readonly", "mixins", "vuex", "axios", "pathify", "querystring",
    "chocolatey", "Monitorian", "prettyping", "shellcheck", "shfmt", "cloc", "ntop",
    "shortcode", "longcode", "mobilephone", "unformatted",
    "glyphicon", "Newtonsoft", "Elmah", "cloudshell", "winget",
    "ggml", "subpattern", "neox", "jqlang", "koalaman", "mvdan", "dandavison", "sharkdp",
    "gsass", "msvc", "vswhere", "dism", "diffsofancy", "HOMEREPO", "killall",
    "Spacebar", "prefs", "sandboxed", "barebones", "Entra", "unshallow",
    "shopt", "extglob", "pwsh", "msbuild", "msdeploy", "elif", "notmatch",
    "vstest", "creds", "coreutils"
  ],
  "ignoreWords": [
    "ify", "sify", // Word-'ify' hacks
    "ified", "sified", // Word-'ified' hacks
    "sms", "rsms" // Word-'sms' hacks
  ]
}
