//cSpell GLOBAL Settings (not workspace specific)
// Workspace specific settings should go into ${workspace}/.vscode/cSpell.json
{
  "languageSettings": [
    // Comment only spell check in JavaScript, Typescript, JSON/C, Vue
    {
      "languageId": "javascript,typescript,json,jsonc,vue,html",
      "includeRegExpList": [ "CStyleComment", "strings" ]
    }
  ],
  "userWords": [
    "posix", "pubkey", "symlink", "symlinks", "dotfiles",
    "datetime", "blob", "blobstorage",
    "oauth", "authed", "auth'ed", "connstring",
    "authtoken", "bday",
    "hacky", "hackjob", "smidge", "upto", "hardcoding", "hardcode", "automagically",
    "shortname", "hostnames", "stackable", "helloworld",
    "linebreaks", "uniquefield", "hotloads",
    "formname", "formtitle",
    "docx", "localsettings",
    "docs", "objs",
    "fatals",
    "noopener", "noreferrer", "noindex",
    "readonly", "mixins", "vuex", "axios", "pathify",
    "chocolatey"
  ],
  "ignoreWords": [
    "ify", "sify", // Word-'ify' hacks
    "ified", "sified", // Word-'ified' hacks
    "sms", "rsms" // Word-'sms' hacks
  ]
}
